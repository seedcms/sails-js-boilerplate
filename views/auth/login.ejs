<% if (errors) {%>
  <% errors.forEach(function (error) { %>
    <%= __(error) %>
  <% }) %>
<% } %>
<h1 class="ui header">
  <i class="fa fa-rocket"></i>
  <div class="content">
    Login
  </div>
</h1>
<form role="form" action="/auth/local" method="post" class="ui form">
  <div class="field">
   <label>Username or Email</label>
   <input type="text" name="identifier" placeholder="Username or Email">
  </div>
  <div class="field">
   <label>Username</label>
   <input type="password" name="password" placeholder="Password">
  </div>
  <button type="submit" class="ui button blue large">Sign in</button>
</form>
